<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<%- include('./component/head', { title: '로그인 - 완두점빵' }) %>
		<script src="../static/js/index.js"></script>
		<style>
			@media screen and (max-width: 768px) {
				.container {
					padding: 0 1rem 1rem 1rem;
				}
			}
		</style>
</head>

<body>
	<%- include('./component/header') %>
		<main class="main-user form-signin">
			<div class="login-inner">
				<form id="loginForm" name="login" class="container" style="max-width: 380px">
					<h1 class="h3 mb-3 fw-normal text-center">로그인</h1>
					<div class="form-floating mb-2">
						<input id="userid" type="text" class="form-control" placeholder="id" name="id" />
						<label for="userid">아이디를 입력해주세요.</label>
					</div>
					<div class="form-floating">
						<input id="password" type="password" class="form-control" placeholder="password" name="pw"
							onkeydown="if(window.event.keyCode == 13){tryLogin()}" />
						<label for="password">비밀번호를 입력해주세요.</label>
					</div>
					<br />

					<!-- <div class="form-check text-start my-3">
						<input id="loginSave" class="form-check-input" type="checkbox" value="remember-me"
							id="flexCheckDefault">
						<label class="form-check-label align-text-bottom" for="loginSave">로그인 저장</label>
					</div> -->
					<button id="useridBtn" class="btn btn-primary w-100 py-2" type="button"
						onclick="tryLogin()">로그인</button>
					<div class="d-flex justify-content-between">
						<div class="mt-3">
							<!-- <a href="/register">회원가입</a> -->
						</div>
					</div>
				</form>
			</div>
		</main>
		<%- include('./component/footer') %>
</body>

</html>